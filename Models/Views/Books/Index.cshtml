@{
    ViewBag.Title = "Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Books</h2>

<table id="booksTable" class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Number in stock</th>
            <th>Available number</th>
            <th>Author</th>
            <th>Publication year</th>
            <th>Publishing house</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section Scripts
{
<script>
    $(document).ready(function (){
        $("#booksTable").DataTable({
            ajax: {
                url: 'api/books',
                dataSrc: "",
            },
            columns: [
                {
                    data: "name",
                    render: function (data, type, book) {
                        return "<a href='books/details/" + book.id + "'>" + book.name + "</a>";
                    }
                },
                {
                    data: "numberInStock"
                },
                {
                    data: "numberAvailable"
                },
                {
                    data: "author"
                },
                {
                    data: "publicationYear"
                },
                {
                    data: "publishingHouse"
                }
            ]
        });
    });
</script>
}